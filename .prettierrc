{
    bracketSameLine: false,
    jsxSingleQuote: false,
    parser: 'typescript',
    printWidth: 120,
    quoteProps: 'as-needed',
    semi: true,
    singleQuote: true,
    tabWidth: 4,
    trailingComma: 'all',
    bracketSpacing: true,
    arrowParens: 'always',
    overrides: [
        {
            files: '*.json',
            options: {
                tabWidth: 2,
                parser: 'json',
            },
        },
        {
            files: '*.md',
            options: {
                parser: 'markdown',
            },
        },
        {
          "files": ".*rc",
          "options": {
            "parser": "json"
          }
        }
    ]
}